<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <RelativeLayout
            android:id="@+id/test_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/retest_text"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="!@#!@#!@$"></TextView>

            <ImageView
                android:id="@+id/test_profile_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/retest_text"></ImageView>

            <TextView
                android:id="@+id/test_user_name"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@id/retest_text"
                android:layout_toLeftOf="@id/test_uptime"
                android:layout_toRightOf="@id/test_profile_image"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="兎田ぺこら👯‍♀️新曲｢ララララビット！！｣歌ったぺこ！"></TextView>

            <TextView
                android:id="@+id/test_uptime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/retest_text"
                android:layout_alignParentRight="true"
                android:text="default"></TextView>

            <TextView
                android:id="@+id/test_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/test_user_name"
                android:layout_toRightOf="@id/test_profile_image"
                android:text="Error2"></TextView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/test_media_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/test_content"
                android:layout_toRightOf="@id/test_profile_image"
                app:cardCornerRadius="25dp">

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ff0000"
                    android:rowCount="2">

                    <LinearLayout
                        android:id="@+id/media_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/tmedia_detail_layout1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/test_media"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:adjustViewBounds="true"
                                android:src="@drawable/banner"></ImageView>

                            <ImageView
                                android:id="@+id/test_media4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:adjustViewBounds="true"
                                android:src="@drawable/banner"></ImageView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tmedia_detail_layout2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/test_media2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:adjustViewBounds="true"
                                android:src="@drawable/banner"></ImageView>

                            <ImageView
                                android:id="@+id/test_media3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:adjustViewBounds="true"
                                android:src="@drawable/banner"></ImageView>
                        </LinearLayout>
                    </LinearLayout>
                </GridLayout>
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
</layout>