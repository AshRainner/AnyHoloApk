<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tweet_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/tweet_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/retweet_text"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="!@#!@#!@$"></TextView>

        <ImageView
            android:id="@+id/tweet_profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/retweet_text"></ImageView>

        <TextView
            android:id="@+id/tweet_user_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/retweet_text"
            android:layout_toLeftOf="@id/tweet_uptime"
            android:layout_toRightOf="@id/tweet_profile_image"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="兎田ぺこら👯‍♀️新曲｢ララララビット！！｣歌ったぺこ！"></TextView>

        <TextView
            android:id="@+id/tweet_uptime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/retweet_text"
            android:layout_alignParentRight="true"
            android:text="default"></TextView>

        <TextView
            android:id="@+id/tweet_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tweet_user_name"
            android:layout_toRightOf="@id/tweet_profile_image"
            android:text="Error2"></TextView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tweet_media_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tweet_content"
            android:layout_toRightOf="@id/tweet_profile_image"
            app:cardCornerRadius="25dp">
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tweet_quoted_content"
                android:background="#ff0000"
                android:rowCount="2">

                <LinearLayout
                    android:id="@+id/media_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/media_detail_layout1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/tweet_media"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:src="@drawable/banner"
                            android:layout_margin="5dp"></ImageView>
                        <ImageView
                            android:id="@+id/tweet_media4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:src="@drawable/banner"
                            android:layout_margin="5dp"></ImageView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/media_detail_layout2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/tweet_media2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:src="@drawable/banner"
                            android:layout_margin="5dp"></ImageView>

                        <ImageView
                            android:id="@+id/tweet_media3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:src="@drawable/banner"
                            android:layout_margin="5dp"></ImageView>
                    </LinearLayout>
                </LinearLayout>
            </GridLayout>

        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:id="@+id/testview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tweet_content"></TextView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/quotedView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/testview"
            android:layout_toRightOf="@id/tweet_profile_image"
            app:cardCornerRadius="25dp"
            app:strokeWidth="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/tweet_quoted_profile_image"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"></ImageView>

                <TextView
                    android:id="@+id/tweet_quoted_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_toLeftOf="@id/tweet_quoted_uptime"
                    android:layout_toRightOf="@id/tweet_quoted_profile_image"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="兎田ぺこら👯‍♀️新曲｢ララララビット！！｣歌ったぺこ！"></TextView>

                <TextView
                    android:id="@+id/tweet_quoted_uptime"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="8시간 전"></TextView>

                <TextView
                    android:id="@+id/tweet_quoted_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tweet_quoted_user_name"
                    android:layout_toRightOf="@id/tweet_quoted_profile_image"
                    android:text="Error2"></TextView>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tweet_quoted_content"
                    android:rowCount="2">

                    <LinearLayout
                        android:id="@+id/media_quoted_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/media_quoted_detail_layout1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/tweet_quoted_media"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:adjustViewBounds="true"></ImageView>
                            <ImageView
                                android:id="@+id/tweet_quoted_media4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:adjustViewBounds="true"></ImageView>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/media_quoted_detail_layout2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/tweet_quoted_media2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:adjustViewBounds="true"></ImageView>

                            <ImageView
                                android:id="@+id/tweet_quoted_media3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:adjustViewBounds="true"></ImageView>
                        </LinearLayout>
                    </LinearLayout>
                </GridLayout>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>

</RelativeLayout>