<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">.
    <TextView
        android:id="@+id/retest_text"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:text="님이 리트윗 했습니다."></TextView>
    <TextView
        android:id="@+id/retest_user"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_toLeftOf="@id/retest_text"
        android:text="!!@#$!@#%!@#$^@#$^@#$%###################%"
        android:ellipsize="end"
        android:layout_marginLeft="50dp"
        android:maxLines="1"></TextView>
    <com.example.anyholo.Adapter.TestView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/testLayout"
        android:layout_below="@id/retest_text">/
    </com.example.anyholo.Adapter.TestView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:strokeWidth="2dp"
        android:id="@+id/tquotedView"
        android:layout_below="@id/testLayout"
        android:layout_marginLeft="50dp">
    <com.example.anyholo.Adapter.TestView
        android:id="@+id/quotedLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/testLayout">
    </com.example.anyholo.Adapter.TestView>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>